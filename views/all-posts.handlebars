<div class="posts">
  {{#each posts}}
    <article class="card">
      <div class="card-header flex-row justify-space-between">
        <h2>
          <a href="/posts/{{id}}">
            {{title}}
          </a>
        </h2>
        <div>
          posted by
          {{user.username}}
          {{!-- {{format_date createdAt}} --}}
        </div>
      </div>
      <div class="card-body">
        {{post_body}}
      </div>
    </article>
  {{/each}}
</div>