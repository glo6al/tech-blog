{{#if loggedIn}}
  <form class="new-comment-form" id="new-comment-form">
    <div>
      <textarea name="comment-body" class="form-textarea form-input"></textarea>
    </div>

    <div>
      <button type="submit" class="btn">add comment</button>
    </div>
  </form>
{{/if}}

<div class="comments li-group">
  {{#each this}}
    <section class="comment list-item">
      <div class="meta">
        <h3> {{user.username}}</h3>
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src="/js/comment.js"></script>
{{/if}}